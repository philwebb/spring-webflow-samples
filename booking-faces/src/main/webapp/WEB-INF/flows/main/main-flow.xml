<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/webflow
		http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
	
	<var name="searchCriteria" class="org.springframework.webflow.samples.booking.SearchCriteria" />
	
	<view-state id="enterSearchCriteria">
		<on-render>
			<evaluate expression="bookingService.findBookings(currentUser?.name)" result="viewScope.bookings" result-type="dataModel" />
		</on-render>
		<transition on="search" to="reviewHotels"/>
		<transition on="cancelBooking">
			<evaluate expression="bookingService.cancelBooking(bookings.selectedRow)" />
		</transition>
		<transition on="test1" to="enterSearchCriteria">
			<set name="flashScope.status" value="'test1'"/>
		</transition>
		<transition on="test2" to="finishAndRedirect">
			<set name="flashScope.status" value="'test2'"/>
		</transition>
		<transition on="test3" to="viewRedirect">
			<set name="flashScope.status" value="'test3'"/>
		</transition>
	</view-state>
	
	<view-state id="reviewHotels">
		<on-entry>
			<set name="viewScope.hotels" value="searchCriteria.getDataModel(bookingService)" />
		</on-entry>
		<transition on="select" to="reviewHotel">
			<set name="flowScope.hotel" value="hotels.selected" />
		</transition>
		<transition on="changeSearch" to="enterSearchCriteria" />
	</view-state>
	
	<view-state id="reviewHotel">
		<transition on="book" to="bookHotel" />
		<transition on="cancel" to="reviewHotels" />
	</view-state>

	<subflow-state id="bookHotel" subflow="booking">
		<input name="hotelId" value="hotel.id" />
		<transition on="bookingConfirmed" to="finish">
			<set name="flashScope.status" value="'All good'"/>
		</transition>
		<transition on="bookingCancelled" to="enterSearchCriteria">
			
		</transition>
	</subflow-state>
			
	<end-state id="finish" />
	
	<end-state id="finishAndRedirect" view="externalRedirect:outcome">
		<on-entry>
			<set name="flashScope.whatever" value="'Yo'"/>
		</on-entry>
	</end-state>
	
	<view-state id="viewRedirect" view="externalRedirect:outcome"/>
		
	
</flow>